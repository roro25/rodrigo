<h1>Listing direccions</h1>

<table>
  <thead>
    <tr>
      <th>Calle</th>
      <th>Numero</th>
      <th>Comuna</th>
      <th>Ciudad</th>
      <th>Pais</th>
      <th>Usuario</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @direccions.each do |direccion| %>
      <tr>
        <td><%= direccion.calle %></td>
        <td><%= direccion.numero %></td>
        <td><%= direccion.comuna %></td>
        <td><%= direccion.ciudad %></td>
        <td><%= direccion.pais %></td>
        <td><%= direccion.usuario %></td>
        <td><%= link_to 'Show', direccion %></td>
        <td><%= link_to 'Edit', edit_direccion_path(direccion) %></td>
        <td><%= link_to 'Destroy', direccion, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

